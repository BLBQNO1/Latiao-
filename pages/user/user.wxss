page{
  background-color: #eee;
}
.user_info_wrap{
  height: 45vh;
  overflow: hidden;
  background: url(http://lblt.site/wx/tob.jpg);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.user_info_wrap .user_img_wrap{
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg{
  height: 40vh;
  filter: blur(5rpx);
}
.user_info_wrap .user_img_wrap .user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
}
.user_info_wrap .user_img_wrap .user_info .user_name{
  color: #fff;
  margin-top: 40rpx;
}
.user_info_wrap .user_btn{
  height: 40vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 66;
}
.user_info_wrap .user_btn button{
  color: var(--themeColor);
  width: 25%;
  box-shadow: 2rpx 2rpx 10rpx #000;
}
.user_content{
  position: relative;
}
.user_content .user_main{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  padding-bottom: 100rpx;
}
.user_content .user_main .history_wrap{
  background-color: #fff;
  display: flex;
} 
.user_content .user_main .history_wrap navigator{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num{
  color: var(--themeColor);
}

.order_wrap{
  background-color: #fff;
  margin-top: 30rpx;
}
.order_wrap .order_title{
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.order_wrap .order_content{
  display: flex;
}
.order_wrap .order_content navigator{
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.order_wrap .order_content navigator .iconfont{
  color: var(--themeColor);
  font-size: 40rpx;
}
.address_wrap{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.app_info_wrap{
  margin-top: 30rpx;
  background-color: #fff;
}
.app_info_wrap .app_info_item{
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.app_info_wrap .app_info_item button{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  font-weight: normal;
  background-color: #fff;
  text-align: left;
}
.recommend_wrap{
  margin-top: 30rpx;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
}
.recommend_wrap .iconfont{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  font-weight: normal;
  background-color: #fff;
}
.login{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  background-color: rgba(0, 0, 0, .3);
}
.login_wrap{
  position: fixed;
  background-color: #fff;
  height: 60vh;
  width: 80%;
  left: 10%;
  bottom: 20%;
  overflow: hidden;
}
.login_wrap .title{
  padding-top: 15%;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  background:-webkit-linear-gradient(left,#ffbb00,#1E9FFF 25%,#1eff00 50%,#1E9FFF 75%,#ff0000);
	color:transparent;
	-webkit-background-clip:text;
	background-size:200% 100%;
	animation:masked-animation 1s infinite linear;
}
@-webkit-keyframes masked-animation {
	0% {
	background-position:0 0;
}
100% {
	background-position:-100% 0;
}
}
.login_wrap .login_img{
  display: flex;
  justify-content: center;
  padding-top: 10%;
}
.login_wrap .login_img .img_box{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10%;
  border: 1rpx solid var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_wrap .login_img .img_box1{
  border: none;
}
.login_wrap .login_img .img_box image{
  width: 120rpx;
  height: 120rpx;
}
.login_wrap .btn{
  padding-top: 10%;
}
.login_wrap .btn button{
  margin-bottom: 30rpx;
  font-weight: normal;
  font-size: 28rpx;
}
.login_wrap .btn button:first-child{
  background-color: var(--themeColor);
  color: #fff;
}
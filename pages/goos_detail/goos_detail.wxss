page{
  padding-bottom: 90rpx;
}
.detail_swiper swiper{
  height: 65vw;
  text-align: center;
}
.detail_swiper swiper image{
  width: 60%;
}
.goods_price{
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff0000;
}
.goods_name_row{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
}
.goods_name_row .goods_name{
  flex: 6;
  color: #000;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
}
.goods_name_row .goods_collect .icon-shoucang{
  color: #ffa500;
}
.goods_info .goods_info_title{
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx;
  color: #ff0000;
}
.btm_tool{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #1E9FFF;
}
.btm_tool .tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.btm_tool .tool_item button{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
}
.btm_tool .btn_cart{
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  border-radius: 50rpx 0 0 50rpx;
  margin: 6rpx 0;
}
.btm_tool .btn_buy{
  flex: 2;
  background-color: #1E9fff;
  color: #fff;
  border-radius: 0 50rpx 50rpx 0;
  margin: 6rpx 0;
}
.btm_tool .btn_buy view{
  position: relative;
}
.btm_tool .btn_buy view .address{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0;
}


.login{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  background-color: rgba(0, 0, 0, .3);
}
.login_wrap{
  position: fixed;
  background-color: #fff;
  height: 60vh;
  width: 80%;
  left: 10%;
  bottom: 20%;
  overflow: hidden;
}
.login_wrap .title{
  padding-top: 15%;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  background:-webkit-linear-gradient(left,#ffbb00,#1E9FFF 25%,#1eff00 50%,#1E9FFF 75%,#ff0000);
	color:transparent;
	-webkit-background-clip:text;
	background-size:200% 100%;
	animation:masked-animation 1s infinite linear;
}
@-webkit-keyframes masked-animation {
	0% {
	background-position:0 0;
}
100% {
	background-position:-100% 0;
}
}
.login_wrap .login_img{
  display: flex;
  justify-content: center;
  padding-top: 10%;
}
.login_wrap .login_img .img_box{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10%;
  border: 1rpx solid var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_wrap .login_img .img_box1{
  border: none;
}
.login_wrap .login_img .img_box image{
  width: 120rpx;
  height: 120rpx;
}
.login_wrap .btn{
  padding-top: 10%;
}
.login_wrap .btn button{
  margin-bottom: 30rpx;
  font-weight: normal;
  font-size: 28rpx;
}
.login_wrap .btn button:first-child{
  background-color: var(--themeColor);
  color: #fff;
}